@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Core.Models.PublishedContent
@using System.Text
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Industries>

@{
	Layout = "MasterLayout.cshtml";

    // Featured Industries Section
    var label = Model.Value<string>("label");
    var shortHeading = Model.Value<string>("shortHeading");
    var cardItems = Model.Value<BlockListModel>("card");

    // Why Choose Section
    var description = Model.Value<string>("description");
    var sideImage = Model.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("sideImage");
}


   <!-- Hero Section -->
     @await Html.GetBlockGridHtmlAsync(Model, "heroWidget") 

   <!-- Services Snapshot Section -->
    @await Html.GetBlockGridHtmlAsync(Model, "industriesWidget") 





    <!-- Featured Industries Section -->
    <section id="featured-industries" class="featured-industries section">
  <div class="container">

    <div class="section-title row justify-content-between align-items-center mb-4 position-relative">
      <div class="col-12">
        <h2>@label</h2>
        <p>@shortHeading</p>
      </div>

      <!-- Arrows -->
      <div class="col-12">
        <div class="slider-arrows">
        <button class="prev"><i class="bi bi-arrow-left"></i></button>
        <button class="next"><i class="bi bi-arrow-right"></i></button>
      </div>
      </div>
    </div>

    <div class="industry-slider-wrapper">
      <div class="industry-slider">

      @if (cardItems != null && cardItems.Any())
       {   
         @foreach (var item in cardItems)
         {
         var content = item.Content;
         var icon = content.Value<string>("icon");
         var cardHeading = content.Value<string>("heading");
         var shortDescription = content.Value<string>("shortDescription");

        <div class="industry-card">
          <div class="icon"><i class="@icon"></i></div>
          <h3>@cardHeading</h3>
          <p>@shortDescription</p>
        </div>
         }
       }
      </div>
    </div>
  </div>
</section>



    <!-- Section 8: Trust Builder -->
    <section class="my-4" data-aos="fade-up">
      <div class="container">
        <div class="trust row g-3 align-items-center">
          <div class="col-md-7">
             @Html.Raw(description.ToString().Replace("<p>", "").Replace("</p>", "")) 
          </div>
          <div class="col-md-5 text-center">
           
            <div class="img-container">
             @if(sideImage != null)
              {
               <img src="@sideImage.Url()" width="100%" height="100%" alt="">
             }
              </div>
         
          </div>
        </div>
      </div>
    </section>

    <!-- Media Content Section -->
    @await Html.GetBlockGridHtmlAsync(Model, "midBannerWidget") 